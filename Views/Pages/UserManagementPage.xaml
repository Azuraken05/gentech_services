<UserControl x:Class="gentech_services.Views.Pages.UserManagementPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:gentech_services.Views.Pages"
             xmlns:converters="clr-namespace:gentech_services.Converters"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1200" Background="#F5F5F5">
    <UserControl.Resources>
        <converters:BoolToStatusConverter x:Key="BoolToStatusConverter"/>
    </UserControl.Resources>
    <Grid>
        <!-- Main Content -->
        <Grid Margin="32,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="User Management"
                       FontSize="32" FontWeight="Bold"
                       VerticalAlignment="Center"/>

            <TextBox x:Name="SearchTextBox"
                     Grid.Column="1"
                     Style="{StaticResource OutlineTextBox}"
                     Tag="Search by ID, or Name"
                     Width="200"
                     Height="40"
                     FontSize="14"
                     VerticalContentAlignment="Center"
                     TextChanged="SearchTextBox_TextChanged"/>
        </Grid>

        <!-- Current User Info -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,16">
            <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1"
                    CornerRadius="20" Padding="12,6" Margin="0,0,8,0">
                <TextBlock FontSize="13">
                    <Run Text="Current User: " Foreground="#666"/>
                    <Run Text="{Binding CurrentUserName, FallbackValue='Admin/Owner'}" FontWeight="SemiBold"/>
                </TextBlock>
            </Border>
            <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1"
                    CornerRadius="20" Padding="12,6">
                <TextBlock FontSize="13">
                    <Run Text="Role: " Foreground="#666"/>
                    <Run Text="{Binding CurrentUserRole, FallbackValue='Admin'}" FontWeight="SemiBold"/>
                </TextBlock>
            </Border>
        </StackPanel>

        <!-- Users Table -->
        <Border Grid.Row="2"
                Background="White"
                BorderBrush="#333333"
                BorderThickness="1"
                CornerRadius="8"
                Padding="0"
                Margin="0,0,0,24">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Table Header -->
                <Border Grid.Row="0"
                        Background="White"
                        BorderBrush="#E0E0E0"
                        BorderThickness="0,0,0,1"
                        Padding="24,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1.2*"/>
                            <ColumnDefinition Width="1.2*"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="ID" FontWeight="Bold" FontSize="13" Foreground="#333"/>
                        <TextBlock Grid.Column="1" Text="NAME" FontWeight="Bold" FontSize="13" Foreground="#333"/>
                        <TextBlock Grid.Column="2" Text="USERNAME" FontWeight="Bold" FontSize="13" Foreground="#333"/>
                        <TextBlock Grid.Column="3" Text="PIN" FontWeight="Bold" FontSize="13" Foreground="#333"/>
                        <TextBlock Grid.Column="4" Text="ROLE" FontWeight="Bold" FontSize="13" Foreground="#333"/>
                        <TextBlock Grid.Column="5" Text="STATUS" FontWeight="Bold" FontSize="13" Foreground="#333"/>
                        <TextBlock Grid.Column="6" Text="ACTION" FontWeight="Bold" FontSize="13" Foreground="#333" HorizontalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Table Content -->
                <ScrollViewer Grid.Row="1"
                              Style="{StaticResource CustomScrollViewer}"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              MaxHeight="600">
                    <ItemsControl x:Name="UsersItemsControl" Padding="0">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#F0F0F0"
                                        BorderThickness="0,0,0,1"
                                        Padding="24,16"
                                        Background="White">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="1.5*"/>
                                            <ColumnDefinition Width="1.5*"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1.2*"/>
                                            <ColumnDefinition Width="1.2*"/>
                                            <ColumnDefinition Width="80"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- ID -->
                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding UserID, StringFormat='U{0:000}'}"
                                                   FontSize="14"
                                                   VerticalAlignment="Center"
                                                   Foreground="#333"/>

                                        <!-- Name -->
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding Name}"
                                                   FontSize="14"
                                                   VerticalAlignment="Center"
                                                   Foreground="#333"/>

                                        <!-- Username -->
                                        <TextBlock Grid.Column="2"
                                                   Text="{Binding Username}"
                                                   FontSize="14"
                                                   VerticalAlignment="Center"
                                                   Foreground="#333"/>

                                        <!-- PIN -->
                                        <TextBlock Grid.Column="3"
                                                   Text="{Binding PIN}"
                                                   FontSize="14"
                                                   VerticalAlignment="Center"
                                                   Foreground="#333"/>

                                        <!-- Role -->
                                        <TextBlock Grid.Column="4"
                                                   Text="{Binding Role}"
                                                   FontSize="14"
                                                   VerticalAlignment="Center"
                                                   Foreground="#333"/>

                                        <!-- Status -->
                                        <Border Grid.Column="5"
                                                Background="{Binding IsActive, Converter={StaticResource BoolToStatusConverter}, ConverterParameter=Background}"
                                                CornerRadius="16"
                                                Padding="16,6"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center">
                                            <TextBlock Text="{Binding IsActive, Converter={StaticResource BoolToStatusConverter}, ConverterParameter=Text}"
                                                       Foreground="{Binding IsActive, Converter={StaticResource BoolToStatusConverter}, ConverterParameter=Foreground}"
                                                       FontSize="12"
                                                       FontWeight="SemiBold"/>
                                        </Border>

                                        <!-- Action Button -->
                                        <Button Grid.Column="6"
                                                Style="{StaticResource KebabMenuButton}"
                                                Background="White"
                                                BorderBrush="#E0E0E0"
                                                BorderThickness="1"
                                                Width="32"
                                                Height="32"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Click="UserActionButton_Click"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Add User Form -->
        <Border Grid.Row="3"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                CornerRadius="8"
                Padding="24">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock Grid.Row="0" Text="Add User"
                           FontSize="18"
                           FontWeight="Bold"
                           Margin="0,0,0,20"/>

                <!-- Form Fields -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="24"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="24"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="24"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="24"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Full Name -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Full Name" FontSize="13" FontWeight="Medium" Margin="0,0,0,8" Foreground="#333"/>
                        <TextBox x:Name="FullNameTextBox"
                                 Style="{StaticResource OutlineTextBox}"
                                 Tag="Juan Pablo"
                                 Height="40"
                                 FontSize="14"
                                 VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <!-- Username -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Username" FontSize="13" FontWeight="Medium" Margin="0,0,0,8" Foreground="#333"/>
                        <TextBox x:Name="UsernameTextBox"
                                 Style="{StaticResource OutlineTextBox}"
                                 Tag="Pablo Jab"
                                 Height="40"
                                 FontSize="14"
                                 VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <!-- Role -->
                    <StackPanel Grid.Column="4">
                        <TextBlock Text="Role" FontSize="13" FontWeight="Medium" Margin="0,0,0,8" Foreground="#333"/>
                        <ComboBox x:Name="RoleComboBox"
                                  Style="{StaticResource OutlineComboBox}"
                                  Height="40"
                                  FontSize="14">
                            <ComboBoxItem Content="Admin"/>
                            <ComboBoxItem Content="Manager"/>
                            <ComboBoxItem Content="Cashier"/>
                            <ComboBoxItem Content="Staff" IsSelected="True"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- PIN -->
                    <StackPanel Grid.Column="6">
                        <TextBlock Text="PIN (4-6 digits)" FontSize="13" FontWeight="Medium" Margin="0,0,0,8" Foreground="#333"/>
                        <TextBox x:Name="PINTextBox"
                                 Style="{StaticResource OutlineTextBox}"
                                 Tag="300"
                                 Height="40"
                                 FontSize="14"
                                 VerticalContentAlignment="Center"
                                 MaxLength="6"/>
                    </StackPanel>

                    <!-- Buttons -->
                    <StackPanel Grid.Column="8"
                                Orientation="Horizontal"
                                VerticalAlignment="Bottom">
                        <Button Content="Cancel"
                                Style="{StaticResource OutlineButton}"
                                Background="White"
                                Foreground="#333"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                Width="90"
                                Height="40"
                                FontSize="14"
                                Tag="6"
                                Margin="0,0,12,0"
                                Click="CancelButton_Click"/>
                        <Button Content="Save"
                                Style="{StaticResource OutlineButton}"
                                Background="#0000FF"
                                Foreground="White"
                                BorderThickness="0"
                                Width="90"
                                Height="40"
                                FontSize="14"
                                FontWeight="SemiBold"
                                Tag="6"
                                Click="SaveButton_Click"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- User Action Menu Popup -->
        <Popup x:Name="UserActionPopup"
               StaysOpen="False"
               AllowsTransparency="True"
               Placement="Bottom"
               PlacementTarget="{Binding ElementName=UsersItemsControl}">
            <Border Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="0"
                    MinWidth="150">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.15" BlurRadius="10" ShadowDepth="2"/>
                </Border.Effect>
                <StackPanel>
                    <Button Content="Edit"
                            Style="{StaticResource OutlineButton}"
                            Background="White"
                            Foreground="#333"
                            BorderThickness="0"
                            HorizontalContentAlignment="Left"
                            Height="40"
                            FontSize="14"
                            Tag="0"
                            Click="EditUser_Click"/>
                    <Border Height="1" Background="#F0F0F0"/>
                    <Button Content="Deactivate"
                            Style="{StaticResource OutlineButton}"
                            Background="White"
                            Foreground="#333"
                            BorderThickness="0"
                            HorizontalContentAlignment="Left"
                            Height="40"
                            FontSize="14"
                            Tag="0"
                            Click="DeactivateUser_Click"/>
                    <Border Height="1" Background="#F0F0F0"/>
                    <Button Content="Delete"
                            Style="{StaticResource OutlineButton}"
                            Background="White"
                            Foreground="#FF0000"
                            BorderThickness="0"
                            HorizontalContentAlignment="Left"
                            Height="40"
                            FontSize="14"
                            Tag="0"
                            Click="DeleteUser_Click"/>
                </StackPanel>
            </Border>
        </Popup>
        </Grid>

        <!-- Edit User Modal Overlay (Outside main grid to cover everything) -->
        <Grid x:Name="EditModalOverlay"
              Background="#80000000"
              Visibility="Collapsed"
              Margin="-32,-24">
            <Border Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="8"
                    Width="700"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Padding="32">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="20" ShadowDepth="4"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Modal Title -->
                    <TextBlock Grid.Row="0" Text="Edit User"
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="0,0,0,24"/>

                    <!-- Edit Form -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="16"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="24"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Full Name -->
                        <StackPanel Grid.Row="0" Grid.Column="0">
                            <TextBlock Text="Full Name" FontSize="13" FontWeight="Medium" Margin="0,0,0,8" Foreground="#333"/>
                            <TextBox x:Name="EditFullNameTextBox"
                                     Style="{StaticResource OutlineTextBox}"
                                     Tag="Juan Pablo"
                                     Height="40"
                                     FontSize="14"
                                     VerticalContentAlignment="Center"/>
                        </StackPanel>

                        <!-- Username -->
                        <StackPanel Grid.Row="0" Grid.Column="2">
                            <TextBlock Text="Username" FontSize="13" FontWeight="Medium" Margin="0,0,0,8" Foreground="#333"/>
                            <TextBox x:Name="EditUsernameTextBox"
                                     Style="{StaticResource OutlineTextBox}"
                                     Tag="Pablo Jab"
                                     Height="40"
                                     FontSize="14"
                                     VerticalContentAlignment="Center"/>
                        </StackPanel>

                        <!-- Role -->
                        <StackPanel Grid.Row="2" Grid.Column="0">
                            <TextBlock Text="Role" FontSize="13" FontWeight="Medium" Margin="0,0,0,8" Foreground="#333"/>
                            <ComboBox x:Name="EditRoleComboBox"
                                      Style="{StaticResource OutlineComboBox}"
                                      Height="40"
                                      FontSize="14">
                                <ComboBoxItem Content="Admin"/>
                                <ComboBoxItem Content="Manager"/>
                                <ComboBoxItem Content="Cashier"/>
                                <ComboBoxItem Content="Staff"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- PIN -->
                        <StackPanel Grid.Row="2" Grid.Column="2">
                            <TextBlock Text="PIN (4-6 digits)" FontSize="13" FontWeight="Medium" Margin="0,0,0,8" Foreground="#333"/>
                            <TextBox x:Name="EditPINTextBox"
                                     Style="{StaticResource OutlineTextBox}"
                                     Tag="1234"
                                     Height="40"
                                     FontSize="14"
                                     VerticalContentAlignment="Center"
                                     MaxLength="6"/>
                        </StackPanel>

                        <!-- Buttons -->
                        <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Right">
                            <Button Content="Cancel"
                                    Style="{StaticResource OutlineButton}"
                                    Background="White"
                                    Foreground="#333"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1"
                                    Width="100"
                                    Height="40"
                                    FontSize="14"
                                    Tag="6"
                                    Margin="0,0,12,0"
                                    Click="CancelEditButton_Click"/>
                            <Button Content="Save"
                                    Style="{StaticResource OutlineButton}"
                                    Background="#0000FF"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Width="100"
                                    Height="40"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Tag="6"
                                    Click="SaveEditButton_Click"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
