<UserControl x:Class="gentech_services.Views.Pages.ServiceManagementPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:gentech_services.Views.Pages"
             xmlns:converters="clr-namespace:gentech_services.Converters"
             xmlns:controls="clr-namespace:gentech_services.Views.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1200" Background="White">
    <UserControl.Resources>
        <converters:BoolToStatusConverter x:Key="BoolToStatusConverter"/>
    </UserControl.Resources>
    <Grid>
        <!-- Main Content -->
        <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Title and Search -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Service Management"
                       FontSize="28" FontWeight="SemiBold"
                       VerticalAlignment="Center"/>

            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBox x:Name="SearchTextBox"
                         Style="{StaticResource OutlineTextBox}"
                         Tag="Search Service"
                         Width="200"
                         Height="35"
                         FontSize="14"
                         Margin="0,0,12,0"
                         TextChanged="SearchTextBox_TextChanged"/>
                <Button Content="New Service"
                        Style="{StaticResource OutlineButton}"
                        Background="#0000FF"
                        Foreground="White"
                        FontWeight="SemiBold"
                        Height="35"
                        Width="120"
                        Tag="4"
                        Click="NewService_Click"/>
            </StackPanel>
        </Grid>

        <!-- Services Table -->
        <Border Grid.Row="1" CornerRadius="8" BorderBrush="Black"
                BorderThickness="1" Margin="0,0,0,20" ClipToBounds="True">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Table Header -->
                <Border Grid.Row="0" Background="#F5F5F5" CornerRadius="8,8,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="0.8*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="12"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Margin" Value="16,0,0,0"/>
                        </Style>
                    </Grid.Resources>

                    <TextBlock Grid.Column="0" Text="NAME"/>
                    <TextBlock Grid.Column="1" Text="CATEGORY"/>
                    <TextBlock Grid.Column="2" Text="PRICE"/>
                    <TextBlock Grid.Column="3" Text="UPDATED"/>
                    <TextBlock Grid.Column="4" Text="STATUS"/>
                    <TextBlock Grid.Column="5" Text="ACTION"/>
                </Grid>
                </Border>

                <!-- Table Content -->
                <Border Grid.Row="1" CornerRadius="0,0,8,8" ClipToBounds="True">
                    <ScrollViewer Style="{StaticResource CustomScrollViewer}"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl x:Name="ServicesItemsControl"
                                      AlternationCount="2">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource AlternatingRow}" Padding="8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="1.5*"/>
                                                <ColumnDefinition Width="1.5*"/>
                                                <ColumnDefinition Width="1.5*"/>
                                                <ColumnDefinition Width="1.2*"/>
                                                <ColumnDefinition Width="0.8*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.Resources>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="FontSize" Value="13"/>
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                    <Setter Property="Margin" Value="16,0,0,0"/>
                                                </Style>
                                            </Grid.Resources>

                                            <TextBlock Grid.Column="0" Text="{Binding Name}" FontWeight="SemiBold"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Category.Name}"/>
                                            <TextBlock Grid.Column="2" Text="{Binding Price, StringFormat='₱ {0:N2}'}"/>
                                            <TextBlock Grid.Column="3" Text="{Binding UpdatedAt, StringFormat='MM/dd/yyyy'}"/>

                                            <!-- Status Badge -->
                                            <Border Grid.Column="4"
                                                    Background="{Binding IsActive, Converter={StaticResource BoolToStatusConverter}, ConverterParameter=Background}"
                                                    CornerRadius="12"
                                                    Padding="12,4"
                                                    HorizontalAlignment="Left"
                                                    Margin="16,0,0,0">
                                                <TextBlock Text="{Binding IsActive, Converter={StaticResource BoolToStatusConverter}, ConverterParameter=Text}"
                                                           Foreground="{Binding IsActive, Converter={StaticResource BoolToStatusConverter}, ConverterParameter=Foreground}"
                                                           FontSize="12"
                                                           FontWeight="SemiBold"
                                                           Margin="0"/>
                                            </Border>

                                            <!-- Action Button -->
                                            <Button Grid.Column="5"
                                                    Style="{StaticResource KebabMenuButton}"
                                                    Background="White"
                                                    BorderThickness="1"
                                                    HorizontalAlignment="Center"
                                                    Click="ServiceActionButton_Click"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Border>

        <!-- Categories Section -->
        <Border Grid.Row="2" CornerRadius="8" BorderBrush="Black"
                BorderThickness="1" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Categories Table -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Categories Header -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.Resources>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="12"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Margin" Value="8,0,0,0"/>
                            </Style>
                        </Grid.Resources>

                        <TextBlock Grid.Column="0" Text="CATEGORY ID"/>
                        <TextBlock Grid.Column="1" Text="NAME"/>
                        <TextBlock Grid.Column="2" Text="SERVICES COUNT"/>
                        <TextBlock Grid.Column="3" Text="ACTION"/>
                    </Grid>

                    <!-- Categories Content -->
                    <Border Grid.Row="1" Height="200" BorderBrush="Black"
                            BorderThickness="0,1,0,0" ClipToBounds="True">
                        <ScrollViewer Style="{StaticResource CustomScrollViewer}"
                                      VerticalScrollBarVisibility="Auto"
                                      Margin="0,8,0,0">
                            <ItemsControl x:Name="CategoriesItemsControl"
                                          AlternationCount="2">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource AlternatingRow}"
                                                Padding="8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1*"/>
                                                    <ColumnDefinition Width="2*"/>
                                                    <ColumnDefinition Width="1.5*"/>
                                                    <ColumnDefinition Width="2*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.Resources>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="FontSize" Value="13"/>
                                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                                        <Setter Property="Margin" Value="8,0,0,0"/>
                                                    </Style>
                                                </Grid.Resources>

                                                <TextBlock Grid.Column="0" Text="{Binding CategoryID}" FontWeight="SemiBold"/>
                                                <TextBlock Grid.Column="1" Text="{Binding Name}" FontWeight="SemiBold"/>
                                                <TextBlock Grid.Column="2" Text="{Binding ServicesCount}"/>

                                                <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="8,0,0,0">
                                                    <Button Content="Rename"
                                                            Style="{StaticResource OutlineButton}"
                                                            Background="White"
                                                            Height="28"
                                                            Width="80"
                                                            FontSize="11"
                                                            Margin="0,0,8,0"
                                                            Tag="4"
                                                            Click="RenameCategory_Click"/>
                                                    <Button Content="Delete"
                                                            Style="{StaticResource OutlineButton}"
                                                            Background="#FF0000"
                                                            Foreground="White"
                                                            Height="28"
                                                            Width="80"
                                                            FontSize="11"
                                                            Tag="4"
                                                            Click="DeleteCategory_Click"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                </Grid>

                <!-- Add Category Section -->
                <Border Grid.Column="1" BorderBrush="Black"
                        BorderThickness="1,0,0,0" Padding="16"
                        Width="300">
                    <StackPanel VerticalAlignment="Top">
                        <TextBlock Text="Add New Category"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,20"/>

                        <TextBlock Text="Category Name"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8"/>
                        <TextBox x:Name="NewCategoryTextBox"
                                 Style="{StaticResource OutlineTextBox}"
                                 Tag="Enter category name"
                                 Height="35"
                                 FontSize="13"
                                 Margin="0,0,0,16"/>

                        <Button Content="Add Category"
                                Style="{StaticResource OutlineButton}"
                                Background="#00FF00"
                                Foreground="White"
                                FontWeight="SemiBold"
                                Height="35"
                                Tag="4"
                                Click="AddCategory_Click"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
        </Grid>

        <!-- Modal Overlay -->
        <Grid x:Name="ModalOverlay"
              Background="Transparent"
              Visibility="Collapsed"
              MouseDown="ModalOverlay_MouseDown">
            <Border Background="White"
                    CornerRadius="12"
                    Width="380"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                    Margin="0,60,20,0">
                <Border.Effect>
                    <DropShadowEffect Color="Black"
                                      Opacity="0.25"
                                      BlurRadius="15"
                                      ShadowDepth="2"/>
                </Border.Effect>
                <controls:AddServiceModal x:Name="AddServiceModalControl"/>
            </Border>
        </Grid>

        <!-- Edit Service Modal Overlay -->
        <Grid x:Name="EditModalOverlay"
              Background="#B3FFFFFF"
              Visibility="Collapsed"
              MouseDown="EditModalOverlay_MouseDown">
            <Border Width="380"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect Color="Black"
                                      Opacity="0.25"
                                      BlurRadius="15"
                                      ShadowDepth="2"/>
                </Border.Effect>
                <controls:EditServiceModal x:Name="EditServiceModalControl"/>
            </Border>
        </Grid>

        <!-- Service Action Menu Popup -->
        <Popup x:Name="ServiceActionPopup"
               StaysOpen="False"
               AllowsTransparency="True"
               Placement="Bottom">
            <controls:ServiceActionMenu x:Name="ServiceActionMenuControl"/>
        </Popup>
    </Grid>
</UserControl>
