<UserControl x:Class="gentech_services.Views.Pages.ServiceOrderPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:gentech_services.Views.Pages"
             xmlns:control="clr-namespace:gentech_services.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="850" Background="White">
    <UserControl.Resources>
        <Style TargetType="control:RichTextBox">
            <Setter Property="Margin" Value="0,0,0,3"/>
            <Setter Property="Height" Value="45"/>
        </Style>
    </UserControl.Resources>
    <StackPanel>
        
        <TextBlock Text="Set Appointment" FontWeight="SemiBold" FontSize="28"/>
        <control:RichTextBox Placeholder="First Name"/>
        <control:RichTextBox Placeholder="Last Name"/>
        <control:RichTextBox Placeholder="Email Address"/>
        <control:RichTextBox Placeholder="Phone Number"/>

        <ComboBox Style="{StaticResource OutlineComboBox}" 
                  Height="45" 
                  FontSize="16" Margin="0,0,0,3">
            <ComboBoxItem>Item 1</ComboBoxItem>
            <ComboBoxItem>Item 2</ComboBoxItem>
            <ComboBoxItem>Item 3</ComboBoxItem>
        </ComboBox >
        <DatePicker Style="{StaticResource OutlineDatePicker}" 
                    FontSize="16" Margin="0,0,0,3"/>

        <control:RichTextBox Placeholder="Issue Description" 
                             Height="100" Margin="0,0,0,12"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Clear" Margin="0,0,3,0" 
                    Height="35" Background="White"
                    Style="{StaticResource OutlineButton}"
                    Tag="4"/>
            <Button Content="Set Appointment"
                     Style="{StaticResource OutlineButton}"
                    Background="#0000FF" Foreground="White"
                    Tag="4"/>
        </StackPanel>
    </StackPanel>
</UserControl>
