<UserControl x:Class="gentech_services.Views.Pages.InventoryManagementPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:gentech_services.Views.Pages"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1200" Background="#F5F5F5">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid>
        <!-- Main Content -->
        <Grid Margin="32,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Inventory Management"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#1E1E1E"
                           VerticalAlignment="Center"/>

                <TextBox Grid.Column="1"
                         Style="{StaticResource OutlineTextBox}"
                         Tag="Search by Product, or Category"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Width="250"
                         Height="40"/>

                <Button Grid.Column="3"
                        Content="New Product"
                        Style="{StaticResource PrimaryButton}"
                        Command="{Binding NewProductCommand}"
                        Width="120"
                        Height="40"/>
            </Grid>

            <!-- Low Stock Alert -->
            <Border Grid.Row="1"
                    Background="#FFEBEE"
                    BorderBrush="#FFCDD2"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16"
                    Margin="0,0,0,24"
                    Visibility="{Binding HasLowStockItems, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <Path Data="M1 21h22L12 2 1 21zm12-3h-2v-2h2v2zm0-4h-2v-4h2v4z"
                              Fill="#D32F2F"
                              Width="16"
                              Height="16"
                              Stretch="Uniform"
                              VerticalAlignment="Center"
                              Margin="0,0,8,0"/>
                        <TextBlock Text="Low Stock Alert"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#D32F2F"/>
                    </StackPanel>
                    <ItemsControl ItemsSource="{Binding LowStockProducts}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#EF5350"
                                        CornerRadius="12"
                                        Padding="12,6"
                                        Margin="0,0,8,0">
                                    <TextBlock Foreground="White"
                                               FontSize="12"
                                               FontWeight="SemiBold">
                                        <Run Text="{Binding Name}"/>
                                        <Run Text="("/>
                                        <Run Text="{Binding StockQuanity}"/>
                                        <Run Text=" left)"/>
                                    </TextBlock>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Products Table -->
            <Border Grid.Row="2"
                    Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Table Header -->
                    <Border Grid.Row="0"
                            Background="#F8F9FA"
                            BorderBrush="#E0E0E0"
                            BorderThickness="0,0,0,1"
                            Padding="24,16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1.2*"/>
                                <ColumnDefinition Width="1.2*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="ID" FontWeight="Bold" FontSize="13" Foreground="#333"/>
                            <TextBlock Grid.Column="1" Text="NAME" FontWeight="Bold" FontSize="13" Foreground="#333"/>
                            <TextBlock Grid.Column="2" Text="CATEGORY" FontWeight="Bold" FontSize="13" Foreground="#333"/>
                            <TextBlock Grid.Column="3" Text="PRICE" FontWeight="Bold" FontSize="13" Foreground="#333"/>
                            <TextBlock Grid.Column="4" Text="STOCK QUANTITY" FontWeight="Bold" FontSize="13" Foreground="#333"/>
                            <TextBlock Grid.Column="5" Text="SKU" FontWeight="Bold" FontSize="13" Foreground="#333"/>
                            <TextBlock Grid.Column="6" Text="ACTION" FontWeight="Bold" FontSize="13" Foreground="#333" HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Table Content -->
                    <ScrollViewer Grid.Row="1"
                                  Style="{StaticResource CustomScrollViewer}"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled"
                                  MaxHeight="600">
                        <ItemsControl ItemsSource="{Binding Products}" Padding="0">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#F0F0F0"
                                            BorderThickness="0,0,0,1"
                                            Padding="24,16"
                                            Background="White">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="1.5*"/>
                                                <ColumnDefinition Width="1.2*"/>
                                                <ColumnDefinition Width="1.2*"/>
                                                <ColumnDefinition Width="1.5*"/>
                                                <ColumnDefinition Width="80"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- ID -->
                                            <TextBlock Grid.Column="0"
                                                       Text="{Binding ProductID, StringFormat='P{0:000}'}"
                                                       FontSize="14"
                                                       VerticalAlignment="Center"
                                                       Foreground="#333"/>

                                            <!-- Name -->
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding Name}"
                                                       FontSize="14"
                                                       VerticalAlignment="Center"
                                                       TextTrimming="CharacterEllipsis"
                                                       Foreground="#333"
                                                       FontWeight="SemiBold"/>

                                            <!-- Category -->
                                            <TextBlock Grid.Column="2"
                                                       Text="{Binding CategoryName}"
                                                       FontSize="14"
                                                       VerticalAlignment="Center"
                                                       Foreground="#666"/>

                                            <!-- Price -->
                                            <TextBlock Grid.Column="3"
                                                       Text="{Binding Price, StringFormat='₱{0:N0}'}"
                                                       FontSize="14"
                                                       VerticalAlignment="Center"
                                                       Foreground="#333"/>

                                            <!-- Stock -->
                                            <TextBlock Grid.Column="4"
                                                       Text="{Binding StockQuanity}"
                                                       FontSize="14"
                                                       VerticalAlignment="Center"
                                                       Foreground="#333"/>

                                            <!-- SKU -->
                                            <TextBlock Grid.Column="5"
                                                       Text="{Binding SKU}"
                                                       FontSize="14"
                                                       VerticalAlignment="Center"
                                                       Foreground="#666"/>

                                            <!-- Action Button -->
                                            <Button Grid.Column="6"
                                                    Style="{StaticResource KebabMenuButton}"
                                                    Background="White"
                                                    BorderBrush="#E0E0E0"
                                                    BorderThickness="1"
                                                    Width="32"
                                                    Height="32"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Click="ProductActionButton_Click"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Action Menu Popup -->
            <Popup x:Name="ProductActionPopup"
                   StaysOpen="False"
                   AllowsTransparency="True"
                   Placement="Bottom">
                <Border Background="White"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="4">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.15" BlurRadius="10" ShadowDepth="2"/>
                    </Border.Effect>
                    <StackPanel>
                        <Button Content="View"
                                Style="{StaticResource MenuItemButton}"
                                Width="120"
                                HorizontalContentAlignment="Left"
                                Height="36"
                                FontSize="14"
                                Click="ViewProduct_Click"/>
                        <Button Content="Edit"
                                Style="{StaticResource MenuItemButton}"
                                Width="120"
                                HorizontalContentAlignment="Left"
                                Height="36"
                                FontSize="14"
                                Click="EditProduct_Click"/>
                    </StackPanel>
                </Border>
            </Popup>
        </Grid>

        <!-- View Product Modal -->
        <Grid Background="#80000000"
              Visibility="{Binding IsViewModalVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
              Margin="-32,-24">
            <Border Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="8"
                    Width="500"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Padding="32">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="24"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="24"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Modal Header -->
                    <Grid Grid.Row="0">
                        <TextBlock Text="View Product"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="#1E1E1E"/>
                        <Button Content="Close"
                                Style="{StaticResource OutlineButton}"
                                Command="{Binding CloseViewModalCommand}"
                                Width="70"
                                Height="32"
                                HorizontalAlignment="Right"/>
                    </Grid>

                    <!-- Product Details -->
                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="12"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="12"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="12"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="12"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" FontSize="13" Foreground="#666">
                            <Run Text="SKU: " FontWeight="SemiBold"/>
                            <Run Text="{Binding ViewSKU}"/>
                        </TextBlock>

                        <TextBlock Grid.Row="2" FontSize="13" Foreground="#666">
                            <Run Text="Category: " FontWeight="SemiBold"/>
                            <Run Text="{Binding ViewCategory}"/>
                        </TextBlock>

                        <TextBlock Grid.Row="4" FontSize="13" Foreground="#666">
                            <Run Text="Status: " FontWeight="SemiBold"/>
                            <Run Text="{Binding ViewStatus}"/>
                        </TextBlock>

                        <TextBlock Grid.Row="6" FontSize="13" Foreground="#666">
                            <Run Text="Price: " FontWeight="SemiBold"/>
                            <Run Text="{Binding ViewPrice}"/>
                        </TextBlock>

                        <TextBlock Grid.Row="8" FontSize="13" Foreground="#666">
                            <Run Text="Stock: " FontWeight="SemiBold"/>
                            <Run Text="{Binding ViewStock}"/>
                        </TextBlock>
                    </Grid>

                    <!-- Description -->
                    <StackPanel Grid.Row="4">
                        <TextBlock Text="Description"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="#333"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding ViewDescription}"
                                   FontSize="13"
                                   Foreground="#666"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Edit Product Modal -->
        <Grid Background="#80000000"
              Visibility="{Binding IsEditModalVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
              Margin="-32,-24">
            <Border Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="8"
                    Width="600"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Padding="32">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="24"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="24"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Modal Title -->
                    <TextBlock Grid.Row="0"
                               Text="Edit Product"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="#1E1E1E"/>

                    <!-- Form Fields -->
                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="16"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="16"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="16"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Row 1: Name & SKU -->
                        <StackPanel Grid.Row="0" Grid.Column="0">
                            <TextBlock Text="Name"
                                       FontSize="13"
                                       Foreground="#666"
                                       Margin="0,0,0,8"/>
                            <TextBox Style="{StaticResource OutlineTextBox}"
                                     Tag="Product Name"
                                     Text="{Binding EditProductName, UpdateSourceTrigger=PropertyChanged}"
                                     Height="40"/>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="2">
                            <TextBlock Text="SKU"
                                       FontSize="13"
                                       Foreground="#666"
                                       Margin="0,0,0,8"/>
                            <TextBox Style="{StaticResource OutlineTextBox}"
                                     Tag="83M00051PH"
                                     Text="{Binding EditSKU, UpdateSourceTrigger=PropertyChanged}"
                                     Height="40"/>
                        </StackPanel>

                        <!-- Row 2: Category & Price -->
                        <StackPanel Grid.Row="2" Grid.Column="0">
                            <TextBlock Text="Category"
                                       FontSize="13"
                                       Foreground="#666"
                                       Margin="0,0,0,8"/>
                            <ComboBox Style="{StaticResource OutlineComboBox}"
                                      SelectedValue="{Binding EditSelectedCategory}"
                                      SelectedValuePath="Content"
                                      Height="40">
                                <ComboBoxItem Content="Laptop"/>
                                <ComboBoxItem Content="Electronics"/>
                                <ComboBoxItem Content="Accessories"/>
                                <ComboBoxItem Content="Parts"/>
                                <ComboBoxItem Content="Tools"/>
                                <ComboBoxItem Content="Software"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="2">
                            <TextBlock Text="Price"
                                       FontSize="13"
                                       Foreground="#666"
                                       Margin="0,0,0,8"/>
                            <TextBox Style="{StaticResource OutlineTextBox}"
                                     Tag="₱49,999"
                                     Text="{Binding EditPrice, UpdateSourceTrigger=PropertyChanged}"
                                     Height="40"/>
                        </StackPanel>

                        <!-- Row 3: Stock -->
                        <StackPanel Grid.Row="4" Grid.Column="0">
                            <TextBlock Text="Stock"
                                       FontSize="13"
                                       Foreground="#666"
                                       Margin="0,0,0,8"/>
                            <TextBox Style="{StaticResource OutlineTextBox}"
                                     Tag="300"
                                     Text="{Binding EditStockQuantity, UpdateSourceTrigger=PropertyChanged}"
                                     Height="40"/>
                        </StackPanel>

                        <!-- Row 4: Description -->
                        <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="3">
                            <TextBlock Text="Description"
                                       FontSize="13"
                                       Foreground="#666"
                                       Margin="0,0,0,8"/>
                            <TextBox Style="{StaticResource OutlineTextBox}"
                                     Tag="High Performing Laptop"
                                     Text="{Binding EditDescription, UpdateSourceTrigger=PropertyChanged}"
                                     Height="80"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>
                    </Grid>

                    <!-- Modal Buttons -->
                    <StackPanel Grid.Row="4"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <Button Content="Clear"
                                Style="{StaticResource OutlineButton}"
                                Command="{Binding ClearEditCommand}"
                                Width="100"
                                Height="40"
                                Margin="0,0,12,0"/>
                        <Button Content="Save"
                                Style="{StaticResource PrimaryButton}"
                                Command="{Binding SaveEditCommand}"
                                Width="100"
                                Height="40"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Add Product Modal (opened by New Product button) -->
        <Grid Background="#80000000"
              Visibility="{Binding IsAddModalVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
              Margin="-32,-24">
            <Border Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="8"
                    Width="600"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Padding="32">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="24"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="24"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Modal Title -->
                    <TextBlock Grid.Row="0"
                               Text="Add New Product"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="#1E1E1E"/>

                    <!-- Form Fields -->
                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="16"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="16"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="16"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Row 1: Name & SKU -->
                        <StackPanel Grid.Row="0" Grid.Column="0">
                            <TextBlock Text="Name"
                                       FontSize="13"
                                       Foreground="#666"
                                       Margin="0,0,0,8"/>
                            <TextBox Style="{StaticResource OutlineTextBox}"
                                     Tag="Product Name"
                                     Text="{Binding ProductName, UpdateSourceTrigger=PropertyChanged}"
                                     Height="40"/>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="2">
                            <TextBlock Text="SKU"
                                       FontSize="13"
                                       Foreground="#666"
                                       Margin="0,0,0,8"/>
                            <TextBox Style="{StaticResource OutlineTextBox}"
                                     Tag="Enter SKU"
                                     Text="{Binding SKU, UpdateSourceTrigger=PropertyChanged}"
                                     Height="40"/>
                        </StackPanel>

                        <!-- Row 2: Category & Price -->
                        <StackPanel Grid.Row="2" Grid.Column="0">
                            <TextBlock Text="Category"
                                       FontSize="13"
                                       Foreground="#666"
                                       Margin="0,0,0,8"/>
                            <ComboBox Style="{StaticResource OutlineComboBox}"
                                      SelectedValue="{Binding SelectedCategory}"
                                      SelectedValuePath="Content"
                                      Height="40">
                                <ComboBoxItem Content="Laptop"/>
                                <ComboBoxItem Content="Electronics"/>
                                <ComboBoxItem Content="Accessories"/>
                                <ComboBoxItem Content="Parts"/>
                                <ComboBoxItem Content="Tools"/>
                                <ComboBoxItem Content="Software"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="2">
                            <TextBlock Text="Price"
                                       FontSize="13"
                                       Foreground="#666"
                                       Margin="0,0,0,8"/>
                            <TextBox Style="{StaticResource OutlineTextBox}"
                                     Tag="0.00"
                                     Text="{Binding Price, UpdateSourceTrigger=PropertyChanged}"
                                     Height="40"/>
                        </StackPanel>

                        <!-- Row 3: Stock -->
                        <StackPanel Grid.Row="4" Grid.Column="0">
                            <TextBlock Text="Stock"
                                       FontSize="13"
                                       Foreground="#666"
                                       Margin="0,0,0,8"/>
                            <TextBox Style="{StaticResource OutlineTextBox}"
                                     Tag="0"
                                     Text="{Binding StockQuantity, UpdateSourceTrigger=PropertyChanged}"
                                     Height="40"/>
                        </StackPanel>

                        <!-- Row 4: Description -->
                        <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="3">
                            <TextBlock Text="Description"
                                       FontSize="13"
                                       Foreground="#666"
                                       Margin="0,0,0,8"/>
                            <TextBox Style="{StaticResource OutlineTextBox}"
                                     Tag="Enter description"
                                     Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                                     Height="80"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>
                    </Grid>

                    <!-- Modal Buttons -->
                    <StackPanel Grid.Row="4"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <Button Content="Cancel"
                                Style="{StaticResource OutlineButton}"
                                Command="{Binding CancelAddCommand}"
                                Width="100"
                                Height="40"
                                Margin="0,0,12,0"/>
                        <Button Content="Save"
                                Style="{StaticResource PrimaryButton}"
                                Command="{Binding AddProductCommand}"
                                Width="100"
                                Height="40"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
