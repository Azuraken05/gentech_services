<UserControl x:Class="gentech_services.Views.UserControls.RichTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:gentech_services.Views.UserControls"
             xmlns:conv="clr-namespace:gentech_services.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="300"  Background="Transparent">
    <UserControl.Resources>
        <conv:StringNullOrEmptyToVisibilityConverter x:Key="NullOrEmptyToVisibility"/>
    </UserControl.Resources>
    <Border Style="{StaticResource FloatingBorder}" Effect="{StaticResource BorderShadow}" Padding="4">
        <Grid>
            <TextBox x:Name="txtBox"
                Background="Transparent"
                BorderThickness="0"
                VerticalAlignment="Center"
                FontSize="18"
                FocusVisualStyle="{x:Null}">
                <TextBox.Template>
                    <ControlTemplate TargetType="TextBox">
                        <ScrollViewer x:Name="PART_ContentHost" Background="Transparent"/>
                    </ControlTemplate>
                </TextBox.Template>
            </TextBox>
            <TextBlock Text="{Binding Placeholder, 
                RelativeSource={RelativeSource AncestorType=UserControl}}"
               Foreground="#838D95"
               VerticalAlignment="Center"
               Margin="8,0,8,0"
               IsHitTestVisible="False"
               Visibility="{Binding Text, ElementName=txtBox, 
                Converter={StaticResource NullOrEmptyToVisibility}}"
              />
        </Grid>
    </Border>
</UserControl>
