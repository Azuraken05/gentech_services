<UserControl x:Class="gentech_services.Views.UserControls.Card"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:gentech_services.Views.UserControls"
             mc:Ignorable="d" 
             x:Name="root"
             xmlns:conv="clr-namespace:gentech_services.Converters"
             >
    <UserControl.Resources>
        <conv:StockStatusConverter x:Key="StockStatusConverter"/>
        <conv:StockColorConverter x:Key="StockColorConverter"/>
        <Style TargetType="Border" x:Key="CardStyle">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#1A000000"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12.75"/>
            
            
            <Style.Triggers>
                <DataTrigger Binding="{Binding isSelected, ElementName=root}" Value="True">
                    <Setter Property="BorderThickness" Value="3"/>
                    <Setter Property="BorderBrush" Value="#80000000"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Border x:Name="BorderContainer" Padding="15,10" Height="100" MinWidth="200" Width="220" Margin="0,10,10,0" Style="{StaticResource CardStyle}" >
        <Grid VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Stretch">
                
                <TextBlock  Text="{Binding TextStock, ElementName=root, Converter={StaticResource StockStatusConverter}}"  
                            Foreground="{Binding TextStock, ElementName=root, Converter={StaticResource StockColorConverter}}" 
                            FontSize="10" 
                            LineHeight="14" 
                            TextAlignment="Left" />

                <TextBlock Text="{Binding TextStock, ElementName=root}" Margin="10,0,0,0" FontSize="10" LineHeight="14"/>
            </StackPanel>
            
            <TextBlock Grid.Row="1" Text="{Binding TextName, ElementName=root}"  Foreground="#0A0A0A" FontSize="12" LineHeight="17.5" TextAlignment="Left" />
            <TextBlock Grid.Row="2" Text="{Binding TextCategory, ElementName=root}" Foreground="#717182" FontSize="10" LineHeight="20" TextAlignment="Left"  />
            <TextBlock Grid.Row="3" Text="{Binding TextPrice, ElementName=root, StringFormat=₱{0:N2}}" FontWeight="Bold" FontSize="14" LineHeight="26" TextAlignment="Left"/>
        </Grid>
        
    </Border>
    
</UserControl>
