<UserControl x:Class="gentech_services.Views.UserControls.SelectServiceModal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="600"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">

    <UserControl.Resources>
        <SolidColorBrush x:Key="BlueAccent" Color="#0000FF"/>

        <!-- Modal Shadow Effect -->
        <DropShadowEffect x:Key="ModalShadowEffect"
                          Color="Black"
                          BlurRadius="10"
                          ShadowDepth="2"
                          Direction="270"
                          Opacity="0.15"/>

        <ControlTemplate x:Key="RoundedButtonTemplate" TargetType="Button">
            <Border Background="{TemplateBinding Background}"
                    CornerRadius="5"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}">
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
            </Border>
        </ControlTemplate>

    </UserControl.Resources>

    <Grid x:Name="ModalOverlay"
          Background="#80000000"
          Visibility="Collapsed"
          d:Visibility="Visible"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">

        <Border Background="White"
                CornerRadius="10"
                MaxWidth="600"
                MaxHeight="500"
                Margin="40"
                Padding="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Effect="{StaticResource ModalShadowEffect}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header with Close Button -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="Select Service to Add" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>

                    <Button Content="✕"
                            FontSize="18"
                            Width="32" Height="32"
                            Background="Transparent"
                            BorderThickness="0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Click="CloseButton_Click"
                            Cursor="Hand"/>
                </Grid>

                <!-- Services List -->
                <Border Grid.Row="1"
                        Background="#F2F2F2"
                        CornerRadius="8"
                        Margin="0,0,0,20"
                        BorderThickness="0">
                    <ScrollViewer Style="{StaticResource CustomScrollViewer}"
                                  VerticalScrollBarVisibility="Auto"
                                  MaxHeight="300">
                        <ItemsControl x:Name="ServicesItemsControl"
                                      Margin="8">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White"
                                            CornerRadius="6"
                                            Margin="0,0,0,8"
                                            Padding="12"
                                            BorderThickness="1"
                                            Cursor="Hand"
                                            MouseLeftButtonDown="ServiceItem_Click"
                                            Tag="{Binding}">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="BorderBrush" Value="#DDE1E6"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="BorderBrush" Value="{StaticResource BlueAccent}"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Name}"
                                                           FontSize="14"
                                                           FontWeight="SemiBold"
                                                           Margin="0,0,0,4"/>
                                                <TextBlock Text="{Binding Description}"
                                                           FontSize="11"
                                                           Foreground="#666666"
                                                           TextWrapping="Wrap"
                                                           MaxWidth="350"
                                                           HorizontalAlignment="Left"/>
                                            </StackPanel>

                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding Price, StringFormat='₱ {0:N2}'}"
                                                       FontSize="14"
                                                       FontWeight="Bold"
                                                       VerticalAlignment="Center"
                                                       Margin="12,0,0,0"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>

                <!-- Cancel Button -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Cancel"
                            Width="100" Height="36"
                            Background="White" Foreground="Black"
                            BorderBrush="Black" BorderThickness="1"
                            FontSize="13"
                            Cursor="Hand"
                            Click="CloseButton_Click"
                            Template="{StaticResource RoundedButtonTemplate}"/>
                </StackPanel>

            </Grid>
        </Border>
    </Grid>
</UserControl>
