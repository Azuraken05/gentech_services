<UserControl x:Class="gentech_services.Views.UserControls.ViewProduct"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:gentech_services.Views.UserControls"
             mc:Ignorable="d" 
             x:Name="root"
             d:DesignHeight="450" d:DesignWidth="500">
    <Border MaxWidth="300" MinWidth="235" MinHeight="241" Background="#FFFFFF" CornerRadius="5" BorderBrush="#000000" BorderThickness="1" Padding="20" >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="View Product" FontWeight="Bold" FontSize="18"/>
                <Button Grid.Column="1" Content="Close" HorizontalAlignment="Right" FontSize="12" Padding="8,4" Style="{StaticResource OutlineButton}" Background="#FFFFFF"/>

            </Grid>

            <Border Grid.Row="1" VerticalAlignment="Stretch" Background="#EEEEEEEE" CornerRadius="5" Margin="0,10,0,0" Padding="15">
                <StackPanel Orientation="Vertical">
                    <StackPanel.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="Margin" Value="0,0,0,5"/>
                        </Style>
                    </StackPanel.Resources>
                    <TextBlock>
                        <Run Text="SKU: " FontWeight="Bold"/>
                        <Run Text="n/a "/>
                    </TextBlock>
                    <TextBlock>
                        <Run Text="Category: " FontWeight="Bold"/>
                        <Run Text="n/a"/>
                    </TextBlock>
                    <TextBlock>
                        <Run Text="Price: " FontWeight="Bold"/>
                        <Run Text="n/a"/>
                    </TextBlock>
                    <TextBlock>
                        <Run Text="Stock: " FontWeight="Bold"/>
                        <Run Text="n/a"/>
                    </TextBlock>
                    <TextBlock>
                         <Run Text="Status: " FontWeight="Bold"/>
                         <Run Text="n/a"/>
                    </TextBlock>
                    
                    <TextBlock Margin="0,10,0,0" Text="Description: " FontWeight="Bold"/>
                    <TextBlock Text="n/a"/>
                </StackPanel>
                
            </Border>
        </Grid>

    </Border>
</UserControl>
