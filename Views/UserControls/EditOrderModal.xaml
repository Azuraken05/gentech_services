<UserControl x:Class="gentech_services.Views.UserControls.EditOrderModal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:gentech_services.Views.UserControls"
             xmlns:f="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="850"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">

    <UserControl.Resources>
        <SolidColorBrush x:Key="BlueAccent" Color="#0047FF"/>
        <SolidColorBrush x:Key="OngoingColor" Color="#FFB800"/>
        <SolidColorBrush x:Key="CompletedColor" Color="#00C040"/>
        <SolidColorBrush x:Key="CancelColor" Color="#FF0000"/>

        <Style TargetType="GridViewColumnHeader">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="0,0,0,10"/>
        </Style>

        <f:DesignData x:Key="ServiceItems">
            <local:ServiceItem ServiceName="OS Install" Price="5999.00" StatusText="Set to Ongoing" StatusButtonBackground="{StaticResource OngoingColor}"/>
            <local:ServiceItem ServiceName="OS Install" Price="5999.00" StatusText="Set to Ongoing" StatusButtonBackground="{StaticResource OngoingColor}"/>
            <local:ServiceItem ServiceName="OS Install" Price="5999.00" StatusText="Set to Completed" StatusButtonBackground="{StaticResource CompletedColor}"/>
        </f:DesignData>

    </UserControl.Resources>

    <Grid x:Name="ModalOverlay" Background="#80000000" Visibility="Collapsed" d:Visibility="Visible">
        <Border Background="White"
                CornerRadius="8"
                MaxWidth="850"
                MaxHeight="650"
                Margin="40"
                Padding="30">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ListView Grid.Row="3"
                          x:Name="ServicesListView"
                          BorderThickness="0"  Background="Transparent"
                          SelectionMode="Single"
                          Margin="0,0,0,15"
                          ItemsSource="{f:DesignData Source={StaticResource ServiceItems}}">
                    <ListView.Resources>
                        <Style TargetType="{x:Type ListViewItem}">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="BorderThickness" Value="0" />
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="Transparent"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListView.Resources>

                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Service Name" Width="220">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ServiceName}" FontWeight="Bold" FontSize="16"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="Price" Width="150">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Price, StringFormat='â‚± {0:N2}'}" FontSize="16"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="Status" Width="200">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding StatusText}"
                                                Background="{Binding StatusButtonBackground}"
                                                Foreground="Black" Padding="12,6"
                                                BorderThickness="0"
                                                FontWeight="SemiBold"
                                                FontSize="12"
                                                Click="StatusButton_Click"
                                                Tag="{Binding}"
                                                Style="{StaticResource OutlineButton}"
                                                HorizontalAlignment="Left">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="Action" Width="150">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Cancel"
                                                Background="{StaticResource CancelColor}"
                                                Foreground="White"
                                                Padding="12,6"
                                                BorderThickness="0"
                                                FontWeight="SemiBold"
                                                FontSize="12"
                                                Click="CancelService_Click"
                                                Tag="{Binding}"
                                                Style="{StaticResource OutlineButton}"
                                                HorizontalAlignment="Left">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>

            </Grid>
        </Border>
    </Grid>
</UserControl>